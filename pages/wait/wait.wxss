.box{
  background: 	#DBDBDB;
  width: 100%;
  height: 100vh;
}
.box1{
  display: flex;
  flex-wrap: wrap;
  width: 95%;
  margin: auto;
  background: white;
  border-radius: 0vh 0vh 2vh 2vh;
  font-size: 14px;
  word-break:break-all;
}
.box1 .top1{
  width: 100%;
  display: flex;
  margin-top: 1vh;
  padding-top: 1vh;
}
.box1 .top1 .lift{
  width: 1vh;
  height: 1vh;
  background: green;
  border-radius: 0.5vh;
  margin-top: 1vh;
  margin-right: 2vh;
  margin-left: 1vh;
}
.box1 .top2{
  width: 100%;
  display: flex;
  margin-top: 1vh;
  padding-bottom: 1vh;
}
.box1 .top2 .lift{
  width: 1vh;
  height: 1vh;
  background: red;
  border-radius: 0.5vh;
  margin-top: 1vh;
  margin-right: 2vh;
  margin-left: 1vh;
}

.box2{
  height: 25vh;
  width: 95%;
  margin: auto;
  background: white;
  margin-top: 1vh;
  border-radius: 2vh;
  display: flex;
  flex-wrap: wrap;
}
.box2 .top{
  height: 5vh;
  width: 100%;
  margin-top: 1vh;
  margin-left: 1vh;
  font-size: 13px;
  font-weight: 500;
}
.box2 .mid{
  width: 100%;
  text-align: center;
}
.box2 .mid .font1{
  margin-top: 2vh;
  font-size: 11px;
}
.box2 .mid .font2{
  margin-top: 0.5vh;
  font-size: 25px;
}
.box2  .foot{
  display: flex;
  width: 100%;
  justify-content: center;
  font-size: 14px;
}
.box2  .foot image{
  height: 3vh;
  width: 3vh;
  margin-top: -0.1vh;
}
.box3 {
  width: 95%;
  border-radius: 2vh;
  margin-left: 2.5%;
  margin-top: 1vh;
  
}
.box3 .font1{
  width: 95%;
  background: white;
  margin-top: 1vh;
  padding: 2vh 0vh 2vh 2vh;
  border-radius: 1vh;
  font-size: 13px;
}
